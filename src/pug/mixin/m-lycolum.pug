mixin m-lycolum(listProd, spaceImg)
  if(spaceImg)
    table(width='600', border='0', align='center', cellpadding='0', cellspacing='0')
        tr
          each prop, index in listProd
            if (index === 0)
              td
                a(href=prop.linkProd, title='See promotion', target='_blank')
                  img(src=prop.srcImg, alt=prop.altImg, width='290', height='345', style='display:block; border:none; margin:0; padding:0;', border='0')
              // Space vertical
              td
                img(src='img-6.jpg', width='19', height='345', tyle='display:block; border:none; margin:0; padding:0;', border='0')
              // / Space vertical
            else
              td
                a(href=prop.linkProd, title='See promotion', target='_blank')
                  img(src=prop.srcImg, alt=prop.altImg, width='290', height='345', style='display:block; border:none; margin:0; padding:0;', border='0')
