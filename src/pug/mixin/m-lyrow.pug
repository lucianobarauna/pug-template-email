mixin m-lyrow(linkProd, imgSrc, imgAlt, imgSpace)
  if imgSpace
    // Row product horizontal
    table(width='600', border='0', align='center', cellpadding='0', cellspacing='0')
      tr
        td
          a(href=linkProd, title='See product', target='_blank')
            img(src=imgSrc, alt=imgAlt, width='600', height='338', style='display:block; border:none; margin:0; padding:0;', border='0')
    // Row space horizontal
    table(width='600', border='0', align='center', cellpadding='0', cellspacing='0')
      tr
        td
          img(border='0', style='display:block; border:none; margin:0; padding:0;', src='img-4.jpg', alt='', width='600', height='19')
    // Row space horizontal
  else
    // Row product horizontal
    table(width='600', border='0', align='center', cellpadding='0', cellspacing='0')
      tr
        td
          a(href=linkProd, title='See product', target='_blank')
            img(src=imgSrc, alt=imgAlt, width='600', height='338', style='display:block; border:none; margin:0; padding:0;', border='0')

